<UserControl x:Class="NetKeyServerGUI.DeviceListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetKeyServerGUI"
             mc:Ignorable="d" Height="84" Width="500">
    <Grid>
        <Rectangle Height="84" Margin="0,0,0,0" VerticalAlignment="Bottom" Fill="Black"/>
        <Label x:Name="deviceNameText" Content="Device" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label x:Name="deviceInfoText" Content="ID: 0, Latency: 500ms" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</UserControl>
